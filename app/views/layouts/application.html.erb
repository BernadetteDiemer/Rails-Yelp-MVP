  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Restaurants</a>
      <ul>
        <li class="nav-item">
          <a class="nav-link" href="/restaurants/new">Create a restaurant</a>
        </li>
        <li>
          <a class="nav-link" href="/restaurants">All restaurants</a>
        </li>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
